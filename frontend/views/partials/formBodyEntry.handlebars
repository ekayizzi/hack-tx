<div class="form-body-entry {{{classes}}}">
  <div style="flex-direction: column; align-items: center; height: 20px; align-self: center">
    <div style="padding-right: 20px; width: 160px; color: #344054; font-size: 14px; font-weight: 500; line-height: 20px;white-space: nowrap">
    {{name}}
    </div>
  </div>
  <div style="flex: 1 1 0; flex-direction: column; justify-content: flex-start; align-items: flex-start; gap: 6px; display: inline-flex">
    <div style="align-self: stretch; height: 44px; flex-direction: column; justify-content: flex-start; align-items: flex-start; gap: 6px; display: flex">
      <div style="align-self: stretch; padding-left: 14px; padding-right: 14px; padding-top: 10px; padding-bottom: 10px; background: white; box-shadow: 0px 1px 2px rgba(16, 24, 40, 0.05); border-radius: 8px; border: 1px #D0D5DD solid; justify-content: flex-start; align-items: center; gap: 8px; display: inline-flex">
        <div style="flex: 1 1 0; height: 24px; justify-content: flex-start; align-items: center; gap: 8px; display: flex">
          <input class="field-textbox" placeholder={{placeholder}} style="border: none; flex: 1 1 0; color: #667085; font-size: 16px; font-family: Inter; font-weight: 400; line-height: 24px; word-wrap: break-word; white-space: nowrap"/>
        </div>
        <div style="width: 16px; height: 16px; justify-content: center; align-items: center; display: flex">
          <div style="width: 16px; height: 16px; padding: 1.33px; justify-content: center; align-items: center; display: inline-flex">
            <i class="fa-regular fa-circle-question fa-2xs"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>